@model Lab1_Grupo2.Models.Clientes

@{
    ViewData["Title"] = "Información cliente";
}

<h4>Información de cliente</h4>
<h6>A continuación tienes acceso a todos los datos proporcionados por tu cliente.</h6>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class="col-sm-2">Teléfono</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">
